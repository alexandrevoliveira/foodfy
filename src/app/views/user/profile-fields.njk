<div class="item">
    <div>Nome *</div>
    <div class="input">
        <input 
            type="text"
            name="name"
            value="{{user.name}}"
            placeholder="Digite o nome completo"
            required
        >
    </div>
</div>

<div class="item">
    <div>Email *</div>
    <div class="input">
        <input
            type="text"
            name="email"
            value="{{user.email}}"
            placeholder="Digite o email"
            onblur="Validate.apply(this, 'isEmail')"
        >
    </div>
</div>

<div class="item">
    <div>Senha *</div>
    <div class="input">
        <input
            type="password"
            name="password"
            placeholder="Digite sua senha para alterar seus dados"
        >
    </div>
</div>


<script src="/scripts/CheckFields.js"></script>