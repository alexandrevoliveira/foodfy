{% extends "layout.njk" %}

{% block content %}

<section class="recipes-menu">

    <div class="menu-title">
        <div>Receita: {{plate.title}}</div>
        <div><a href="">Editar Receita</a></div>
    </div>

    <div class="plate-recipes" id="{{plate.id}}">
        <div class="plate-image">
            <img src="{{plate.image}}" alt="{{plate.title}}">
        </div>
        
        <div class="plate-name">
            <h1>{{ plate.title }}</h1>
            <p>por {{ plate.author }}</p>
        </div>

        <section class="recipe-content">
            <h3>Ingredientes <button class="visibility">ESCONDER</button></h3>
            <div class="recipe-info">
                <ul>
                    {% for ingredient in plate.ingredients %}
                        <li>{{ ingredient }};</li>
                    {% endfor %}
                </ul>
            </div>

            <h3>Modo de preparo <button class="visibility">MOSTRAR</button></h3>
            <div class="recipe-info hide">
                {% for tip in plate.preparation %}
                    <p>- {{ tip }}; </p>
                {% endfor %}
            </div>

            <h3>Modo de preparo <button class="visibility">ESCONDER</button></h3>
            <div class="recipe-info">
                <p>{{ plate.information }}</p>
            </div>

        </section>
    </div>

</section>

<script src="/scripts.js"></script>

        
{% endblock %}