{% extends "layout.njk" %}

{% block content %}

<section class="container">

    <div class="menu-title">
        <div>Editando receita</div>            
        <div class="buttons-edit"></div>
    </div>

    <div class="forms-edit">
        <form id="form-delete" method="POST" action="/admin/recipes?_method=DELETE">
            <button class="button" type="submit">Deletar</button>
            <input type="hidden" name="id" value="{{recipe.id}}">
            {% include 'confirm.njk' %}
        </form>

        <form class="recipes-input" method="POST" action="/admin/recipes?_method=PUT">
            <button class="button" type="submit">Salvar Receita</button>
            <input type="hidden" name="id" value="{{recipe.id}}">
            {% include 'recipes/fields.njk' %}

        </form>
    </div>

</section>

{% endblock %}