{% extends 'layout.njk' %}


{% block content %}

<div class="bodyhead">
    <div>Gerenciar chefs</div>            
    <div><a class="button" href="/admin/chefs/create">Criar Chef</a></div>
</div>

<section class="chef-cards">
    
    {% for chef in chefs %}   
        <div class="chef-card">
            <div class="chef-avatar"><img src="{{chef.image}}" alt=""></div>
            <div class="card-info">
                <div class="chef-name">
                    <h3>{{chef.name}}</h3>
                </div>
                {% if chef.recipes_amount > 1%}
                    <p>{{chef.recipes_amount}} receitas</p>
                {% else %}
                    <p>{{chef.recipes_amount}} receita</p>
                {% endif %}
                <div><a class="button" href="/admin/chefs/{{chef.id}}">Visualizar</a></div>
            </div>
        </div>
    {% endfor %}
        
</section>

{% endblock %}