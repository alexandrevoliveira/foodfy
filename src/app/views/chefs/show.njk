{% extends "layout.njk" %}


{% block content %}

<div class="menu-title">
    <div>Receita: {{chef.name}}</div>
    <div><a href="/admin/chefs/{{ chef.id }}/edit">Editar Chef</a></div>
</div>    

<section class="container">

    <div class="chef-info">
        <div class="chef-image">
            <img src="{{chef.avatar_url}}" alt="">
        </div>
        <div class="chef-name">
            <h1>{{chef.name}}</h1>
        </div>
        <div class="chef-recipe_amount">
            <span>{{chef.recipes_amount}}</span>
        </div>
    </div>
    
</section>

<script src="/scripts.js"></script>

        
{% endblock %}