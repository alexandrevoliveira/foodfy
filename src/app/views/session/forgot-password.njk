{% extends 'layout.njk' %}

{% block header %}

<header class="header-forgot">
    
    <div class="container">

        <a href="/">Foodfy</a>

    </div>

</header>

{% endblock %}

{% block content %}

<section class="forgot container form">

    <div class="formhead-forgot">
        <h3>Esqueceu a Senha?</h3>
    </div>

    <form method="POST" action="/admin/users/forgot-password">

        <div class="fields">
            <div class="item">
                <div>Email</div>
                <div class="input">
                    <input
                        type="text"
                        name="email"
                        value="{{user.email}}"
                        placeholder="Digite seu email"
                    >
                </div>
            </div>
        </div>

        <div class="footer">
            <ul>
                <li>
                    <button class="button" type="submit">Recuperar</button>
                </li>
            </ul>
        </div>

    </form>

</section>

{% endblock %}